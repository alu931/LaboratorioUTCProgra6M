@page
@model WebApp.Pages.Contacto.GridModel
@{
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Contacto
        </div>
        <div class="card-body">


            <a class="btn btn-secondary" asp-page="Edit"><i class='bx bxs-add-to-queue'></i></a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Identificación</th>
                                <th>Nombre</th>
                                <th>Primer Apellido</th>
                                <th>Segundo Apellido</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdContacto</td>
                                <td>@item.Proveedor.Nombre</td>
                                <td>@item.Identificacion</td>
                                <td>@item.Nombre</td>
                                <td>@item.PrimerApellido</td>
                                <td>@item.SegundoApellido</td>

                                <td>
                                    <a class="btn btn-secondary" asp-page="Edit" asp-route-id="@item.IdContacto"><i class='bx bx-edit'></i></a>
                                    <button type="button" class="btn btn-secondary" onclick="ContactoGrid.OnClickEliminar(@item.IdContacto)"><i class='bx bx-trash'></i></button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    .
</div>

@section Scripts{

    

    <script defer src="~/App/Contacto/Grid.js"></script>

}